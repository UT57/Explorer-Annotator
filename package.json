{
  "name": "explorer-annotator",
  "displayName": "Explorer Annotator",
  "description": "A plugin to add comments to files and folders in the Explorer.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:fileExplorer.refreshEntry",
    "onCommand:explorer-annotator.addComments"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "fileExplorer",
          "name": "File Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "fileExplorer.refreshEntry",
        "title": "Refresh File Explorer"
      },
      {
        "command": "explorer-annotator.addComments",
        "title": "Add Comment to File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.34",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "glob": "^10.4.1",
    "mocha": "^10.4.0",
    "typescript": "^5.4.5"
  }
}
